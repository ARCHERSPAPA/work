<div (click) = close()>
    <nz-spin nzTip="加载中" [nzSpinning]="isSpinning">
        <div class="overall-time">
            <div class="time" (click) = open($event)>
                <div class="time-left">
                    <p>{{startTime | date:'MM-dd'}}</p>
                    <p>{{startTime | date:'yyyy'}}</p>
                </div>
                <div class="line"></div>
                <div class="time-right">
                    <p>{{endTime | date:'MM-dd'}}</p>
                    <p>{{endTime | date:'yyyy'}}</p>
                </div>
                <nz-range-picker 
                    class="btn1" 
                    nzSize="large" 
                    [(ngModel)]="dateRange" 
                    [nzOpen]="timeFlag" 
                    (ngModelChange)="onChange($event)"
                    [nzDisabledDate]="disabledDate"
                ></nz-range-picker>
            </div>
            <ul>
                <li 
                    *ngFor="let item of overallList;let i = index" 
                    [ngStyle]="{'background':i==idx?backgroundColor:'','color':i==idx?'#fff':'#000'}"
                    (mouseenter)="enter(i,item.name)" 
                    (mouseleave)="leave(i)">
                    <p>{{item.num}}</p>
                    <p>{{item.name}}</p>
                </li>
            </ul>
        </div>
        <div class="vis"> 
            <div id="container"></div>
        </div>
    </nz-spin>
    <div class="overall-table">
        <div class="title">
            <p>详细数据</p>
            <p (click)="exportToExcel()" >下载报表</p>
        </div>
        <nz-table 
            #nzTable 
            [nzFrontPagination]="false"
            [(nzPageIndex)]='pageNo' 
            [(nzPageSize)]="pageSize" 
            [nzTotal]="total"
            (nzPageIndexChange)='changeData()'
            [nzShowPagination]='true'
            [nzData]="tableList"
            [nzLoading]="isTableSpinning"
        >
            <thead>
                <tr>
                    <th>签单时间</th>
                    <th>客户来源</th>
                    <th>负责人</th>
                    <th>设计师</th>
                    <th>其他设计师</th>
                    <th>客户</th>
                    <th>楼盘房号</th>
                    <th>装修类型</th>
                    <th>订单状态</th>
                    <th>金额</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let item of nzTable.data">
                    <td nz-td title="{{item.billTime | date:'yyyy-MM-dd HH:mm:ss'}}" *ngIf="item.billTime">
                        {{item.billTime | date:'yyyy-MM-dd HH:mm:ss'}}
                    </td>
                    <td *ngIf="!item.billTime">--</td>
                    <td nz-td title="{{item.sourceInfo?item.sourceInfo:''}}">
                        {{item.sourceInfo?item.sourceInfo:'--'}}
                    </td>
                    <td nz-td title="{{item.personLiableName?item.personLiableName:''}}">
                        {{item.personLiableName?item.personLiableName:'--'}}
                    </td>
                    <td nz-td title="{{item.designerName?item.designerName:''}}">
                        {{item.designerName?item.designerName:'--'}}
                    </td>
                    <td nz-td title="{{item.designerViceName?item.designerViceName:''}}">
                        {{item.designerViceName?item.designerViceName:'--'}}
                    </td>
                    <td nz-td title="{{item.customerName?item.customerName:''}}">
                        {{item.customerName?item.customerName:'--'}}
                    </td>
                    <ng-container *ngIf="item.customerHouseAddress || item.customerRoomNumber; else elseTemplate">
                        <td nz-td title="{{item.customerHouseAddress}}{{item.customerRoomNumber}}" class="table-eclipse">
                            {{item.customerHouseAddress}}{{item.customerRoomNumber}}
                        </td>
                    </ng-container>
                    <ng-template #elseTemplate>
                        <td nz-td>--</td>
                    </ng-template>
                    <td nz-td title="{{item.type?item.type:''}}">
                        {{item.type?item.type:'--'}}
                    </td>
                    <td nz-td title="{{item.state?item.state:''}}">
                        {{item.state?item.state:'--'}}
                    </td>
                    <td nz-td>
                        {{item.pausePrice?(item.pausePrice|number:'1.2'):'--'}}
                    </td>
                </tr>
            </tbody>    
        </nz-table>
    </div>
</div>