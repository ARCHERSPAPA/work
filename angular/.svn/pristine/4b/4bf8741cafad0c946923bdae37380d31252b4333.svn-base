        children: [
            {
                path: '',
                redirectTo: 'list',
                pathMatch: 'full'
            },
            {
                path: 'list',
                component: TempMealBaseListComponent,
                canActivate: [GuardService],
                data: {
                    breadcrumb: '套装基装列表'
                }
