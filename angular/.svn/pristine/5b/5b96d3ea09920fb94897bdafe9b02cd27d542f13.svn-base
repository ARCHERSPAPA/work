@import "./../../../../assets/scss/mixin";
.product{
    //margin: 12px;
    font-size: 16px;
}

.product_info{
    width: 600px;
    margin: 30px auto;
    .inp{
        position: relative;
        .count{
            position: absolute;
            bottom: 0;
            right: 10px;
            span{
                color: red;
            }
        }
    .com_input{
        width:100%
    }
}
    .btns{
        text-align: right;
    margin-top: 24px;
    button:first-child{
        margin-right: 24px;
    }
}
}
.worker_headImg{
    width: 100px;
    height: 100px;
    border-radius: 100%;
}

.product_pic{
    ul{
        list-style-type: none;
        margin: 0;
        padding: 0;
        li{
            float: left;
            width: 160px;
            height: 160px;
            margin: 2% 0 0 2%;
            border-radius: 4px;
            position: relative;
            .img{
                display: block;
                width: 100%;
                height: 100%;
                position:relative;
                z-index: 9;
            }
            .del {
                display: none;
                position: absolute;
                left: 0;
                bottom: 0;
                width: 100%;
                height: 30px;
                border-bottom-right-radius: 4px;
                border-bottom-left-radius: 4px;
                font-size: 20px;
                line-height: 30px;
                text-align:center;
                color: #f5222d;
                background:rgba(0,0,0,0.45);
                z-index: 10;
            }
            &:hover,&:focus {
                .del {
                    display: block;
                }
            }
        }
    }
}

.product_item{
    &_add{
        text-align: right;
        margin: 12px 0;
    }
    tr th,tr td{
        text-align: center;
    }
}

