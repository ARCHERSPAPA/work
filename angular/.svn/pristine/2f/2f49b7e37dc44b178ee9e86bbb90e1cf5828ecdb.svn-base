@charset "utf-8";
@import "./../../../../assets/scss/mixin";

.detail-assess {
    padding: 5px 20px 50px 20px;
    border: 1px solid #dedede;
    margin: -1px 0 0 0;
    .assess-reply {
        margin: 16px 0;

        label {
            display: inline-block;
      margin-right: 36px;
            vertical-align: top;
            font-size: 14px;
            margin-top: -10px;
            color: rgba(0, 0, 0, 0.65);
        }
        .assess-inp {
            display: inline-block;
            width: 94%;
            height: 150px;
            text-align: right;
            position: relative;
            textarea {
                width: 100%;
                height: 100px;
                font-size: 12px;
                text-align: left;
                resize: none;
                outline: none;
                border: none;
                // @include border();
            }
            button{
                margin-top: 8px;
            }
            .assess-count {
                position: absolute;
                right: 5px;
                bottom: 60px;
            }
        }
    }
    .assess-list {
        .assess-item {
            padding-bottom: 10px;
            font-size: 14px;
            .item-head, item-content, item-imgs {
                margin: 0;
            }
            .item-content{
                color:rgba(0,0,0,0.65);
                margin-bottom: 0 !important;

            }
            .item-head {
                width: 100%;
                font-size: 0;
                span {
                    display: inline-block;
                    vertical-align: top;
                    color: #000;
                    width: 50%;
                    font-size: 12px;
                    &.item-name {
                        text-align: left;
                        font-weight:bold;
                    }
                    &.item-date {
                        text-align: right;
                        color: rgba(0, 0, 0, 0.25);
                    }
                }
            }
            .item-imgs {
                .item-img {
                    display: inline-block;
                    width: 100px;
                    height: 100px;
                    margin: 0 6px 10px 0;
                    border: 1px solid #dedede;
                    img {
                        max-width: 100%;
                        height: 100%;
                    }
                }
            }
        }
    }
}
