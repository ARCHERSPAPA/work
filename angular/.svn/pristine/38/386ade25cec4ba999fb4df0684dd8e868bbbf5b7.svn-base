.overall-time{
    height: 246px;
    background: #1890FF;
    border-radius: 4px 4px 0px 0px;
    position: relative;
    box-sizing: border-box;
    padding:48px 24px 0 24px;
    margin: -24px -24px 0;
    font-family: 'PingFang SC';
    .time{
        width: 437px;
        margin: 0 auto;
        display: flex;
        justify-content: space-around;
        align-items: center;
        position: relative;
        cursor: pointer;
        .time-left{
            font-size: 14px;
            color: #fff;
            text-align: center;
            p:first-child{
                font-size: 30px;
                font-weight: bold;
            }
        }
        .line{
            width:160px;
            height:1px;
            background:rgba(255,255,255,1);
            opacity:0.65;
            margin: 33px 48px;
        }
        .time-right{
            font-size: 14px;
            color: #fff;
            text-align: center;
            p:first-child{
                font-size: 30px;
                font-weight: bold;
            }
        }
        nz-range-picker{
            opacity: 0;
            width: 100%;
            position: absolute;
            top: 70px;
            left: -30px;
            .ant-calendar-picker{
                width: 100%;
            }
        }
       
    }
    ul{
        width:  calc(100% - 48px);
        height: 160px;
        position: absolute;
        top: 166px;
        display: flex;
        justify-content: space-around;
        align-items: center;
        background: #fff;
        border-radius: 4px;
        box-shadow:0px 8px 24px rgba(0,0,0,0.08);
        li{
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            p{
                font-size: 14px;
                &:first-child{
                    font-size: 24px;
                    margin-bottom: 8px;
                    font-weight: bold;
                }
            }
        }
    }
}
.vis{
    padding-top: 142px;
    margin: -24px -24px 40px;
    #container{
       width: 100%;  
       margin-bottom: 20px;
    }
}
.overall-table{
    margin: -24px -24px 0;
    font-family: 'PingFang SC';
    box-sizing: border-box;
    padding: 0 24px;
    .title{
        margin-bottom: 16px;
        height: 22px;
        p:first-child{
            float: left;
            font-size: 16px;
            font-weight: bold;
            line-height:24px;
        }
        p:last-child{
            float: right;
            font-size:14px;
            font-weight:400;
            line-height:22px;
            color:rgba(24,144,255,1);
            cursor: pointer;
        }
    }
}
