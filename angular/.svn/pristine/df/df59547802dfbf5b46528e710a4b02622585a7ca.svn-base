    <div class="list-group-rev">
        <nz-table #rowSelectionTable [nzData]="staffList" [(nzPageIndex)]="pageNo" [(nzPageSize)]="pageSize"
                  [nzScroll]="{ y: '290px'}" [nzTotal]="total" [nzShowPagination]="true" [nzFrontPagination]="false"
                  (nzPageIndexChange)="changeData()" [nzSize]="'middle'">
            <thead>
                <tr>
                    <th>选择</th>
                    <th>姓名</th>
                    <th>部门</th>
                    <th>手机号</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let item of rowSelectionTable.data">
                    <td nzShowCheckbox [(nzChecked)]="item.checked" (click)="selectDesigner($event,item)"></td>
                    <td [title]="item.name?item.name:''">{{item.name?item.name:'--'}}</td>
                    <td [title]="item.departmentName?item.departmentName:''">{{item.departmentName?item.departmentName:'--'}}</td>
                    <td>{{item.phone?item.phone:'--'}}</td>
                </tr>
            </tbody>
        </nz-table>
    </div>
    <!-- <div class="list-quick">
            <rev-quick [type]="2" (selectId)="changeDepart($event)"></rev-quick>
        </div> -->
    <div class="list-quick">
        <div class="list-quick-title">快速查询</div>
        <rev-depart-tree [type]="12" (handleChangeData)="changeDepart($event)"></rev-depart-tree>
    </div>
</div>