        if (buf) {
            const sd = this.buffer.getBuffer(this.bufferName);
            this.versionId = sd.versionId;
            if (this.versionId) {
                this.loadCategory();
                this.category = sd.category ? sd.category : '';
            }
            this.projectName = sd.projectName;
        } else {
            if (this.versionId) {
                this.loadCategory();
            }
        }

        this.changeData();
    }

    /**
