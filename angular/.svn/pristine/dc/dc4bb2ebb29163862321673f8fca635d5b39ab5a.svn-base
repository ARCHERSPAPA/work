@charset "utf-8";
@import "../../../../../assets/scss/mixin";
.cost-account{
  &-title{
    overflow: hidden;
    > span{
      height: 22px;
      font-size: 16px;
      font-weight: 500;
      line-height: 24px;
      color: rgba(0, 0, 0, 0.85);
      float:left;
    }
    .title-full-screen{
      display: block;
      float: right;
      font-size: 14px;
      font-weight: 400;
      line-height: 24px;
      color: #1890FF;
      > span{
        display:inline-block;
        vertical-align: middle;
        margin-left: 2px;
      }
    }
  }
  &-chart{
    position: relative;
    height: 200px;
    margin-left: -50px;
    overflow: hidden;
    > dl{
      width: 120px;
      height: 50px;
      position: absolute;
      left: 50%;
      top: 50%;
      margin-left: -55px;
      margin-top: -30px;
      z-index: 9;
      text-align: center;
      > dt{
        font-size: 20px;
        line-height: 28px;
        color: rgba(0, 0, 0, 0.85);
        word-break: break-all;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      > dd{
        font-size: 14px;
        line-height: 22px;
        color: rgba(0, 0, 0, 0.45);
      }
    }
  }
  &-line{
    border-top: 1px solid #E8E8E8;
    margin: 16px 0 0 16px;
  }
  &-side{
    padding-top: 40px;
    > dl,dt,dd{
      margin:0;
      padding: 0 0 0 16px;
      text-align: left;
    }
    dl{
      &.cost-side{
        dt{
          position: relative;
          @include ellipsis;
          span{
            display: block;
            position: absolute;
            left: 0;
            top: 12px;
            width: 8px;
            height: 8px;
            border-radius: 8px;
            &.bg-profit{
              background: #1890FF;
            }
            &.bg-cost{
              background: #69C0FF;
            }
          }
        }
      }
    }
    dt{
      height: 28px;
      font-size: 20px;
      font-weight: 500;
      line-height: 28px;
      color: rgba(0, 0, 0, 0.85);
    }
    dd{
      font-size: 14px;
      font-weight: 400;
      line-height: 24px;
      color: rgba(0, 0, 0, 0.45);
      @include ellipsis;
    }
    > p{
      &.side-box{
        background: skyblue;
        margin-top: 27px;
        position: relative;
        .side-text{
          position: absolute;
          left: 0;
          top: -20px;
          width: 100%;
          text-align: center;
          font-size: 14px;
          font-weight: 400;
          line-height: 22px;
          color: rgba(0, 0, 0, 0.25);
        }
        .side-line{
          position: absolute;
          left: 0;
          top: 7px;
          width: 96%;
          height: 2px;
          background: #E8E8E8;
        }
        .side-angle{
          position: absolute;
          right: 0;
          width: 0;
          height: 0;
          border-top: 8px solid transparent;
          border-bottom:8px solid transparent;
          border-left:8px solid #E8E8E8;
        }
      }
    }
    > ul{
      &:after{
        content:"";
        position:absolute; 
        bottom: 40px; 
        left: -4px; 
        padding: 4px; 
        border:inherit; 
        border-right: none; 
        border-top: none;  
        background: inherit;
        transform: rotate(45deg);
        -webkit-transform: rotate(45deg); 
        -moz-transform: rotate(45deg); 
      }
      display: flex;
      flex-wrap: wrap;
      padding: 16px 20px;
      background: #F0F2F5;
      border: 1px solid #D9D9D9;
      border-radius: 5px;
      li{
        width: 50%;
        font-size: 14px;
        font-weight: 400;
        line-height: 22px;
        color: rgba(0, 0, 0, 0.45);
        @include ellipsis;
      }
    }
  }
  &-price{
	font-size: 14px;
	font-weight: 400;
	line-height: 22px;
	color: rgba(0, 0, 0, 0.85);
	margin-left: 430px;
  }
  &-total{
    margin-left: 40px;
    width: calc(100% - 95px);
    background: #F0F2F5;
    border: 1px solid #D9D9D9;
    font-weight: 400;
    line-height: 22px;
    color: rgba(0, 0, 0, 0.45);
    font-size: 14px;
    padding: 5px 0 5px 16px;
    margin-bottom: 16px;
    border-radius: 5px;
    &:after{
      content:"";
      position:absolute; 
      bottom: 29px; 
      left: 35px; 
      padding: 3px; 
      border:inherit; 
      border-right: none; 
      border-bottom: none;  
      background: inherit;
      transform: rotate(45deg);
      -webkit-transform: rotate(45deg); 
      -moz-transform: rotate(45deg); 
    }
    div{
      width: 100%;
      @include ellipsis;
      .price{
        color: rgba(0, 0, 0, 0.85);
      }
      .blue-price{
        margin-left: 3px;
        color: #1890FF;
      }
    }
  }
}

.fixed-bottom{
  background: #FFF;
  box-shadow: 0px -2px 8px rgba(0, 0, 0, 0.15);
  position: fixed;
  bottom: 0;
  left: 200px;
  .change-toggle{
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    line-height: 22px;
    color: rgba(0, 0, 0, 0.65);
  }
}
.head-activity{
	font-size:14px;
	font-weight:400;
	color:rgba(0,0,0,0.85);
	div{
	  @include  ellipsis;
	}
}
.activity-table{
  tr th,tr td{
    span{
      max-width: 250px;
      display: block;
      @include  ellipsis;
    }
  }
 
}

