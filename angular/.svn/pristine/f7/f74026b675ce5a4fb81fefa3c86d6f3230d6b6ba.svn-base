@charset "utf-8";
@import "./../../../assets/scss/mixin";
.rev-file-btn {
    width: 100%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    position: relative;
    color: #fff;
    cursor: pointer;
    @include hover(#0a8ddf);
    &:after{
        content:"上传文件"
    }
    input[type=file] {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        z-index: 10;
    }
}

.rev-file-show {
    margin: 10px 0;
    p {
        font-size: 12px;
        margin: 10px 0;
    }
}
