@charset "utf-8";
@import "./../../../assets/scss/mixin";
.modify {
    .textarea {
        position: relative;
        .count {
            position: absolute;
            right: 6px;
            bottom: -20px;
            > span {
                color: #f92650;
            }
        }
    }
}
.large-img{
    width: 100%;
    text-align: center;
    > img{
        max-width: 100%;
        height: auto;
    }
}
.specialList{
    tr th,
    tr td {
        font-size: 14px;
        min-width: 80px;
        max-width: 80px;
        border: 1px solid #e8e8e8;
        border-left: none;
        vertical-align: middle;
        a {
            padding-right: 4px;
        }
        @include ellipsis();
    }
}
.tab-head-title{
    display: inline-block;
    padding:2px 8px;
}
