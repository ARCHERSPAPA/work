@charset "utf-8";
@import "./../../../../assets/scss/mixin";
.detail-add {
  width: 100%;
  margin: 10px auto;
  color: #000000;
  // .disabled{
  //   cursor: not-allowed;
  //   background-color: transparent;
  // }
  &-title {
    font-size: 16px;
    font-weight: bold;
    line-height: 24px;
  }
  ul {
    .layout {
      margin: 0 0 6px 0;
      .typename {
        text-align: center;
      }
        .count {
          position: absolute;
          right: 10px;
          top: 0;
          span {
            color: #ff6000;
          }
        }  
      .position-name{
        position: absolute;
      }
     
    }
    .inp-text {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background: transparent;
      z-index: 9;
    }
    .icon {
      color: #f92650;
      display: inline-block;
      vertical-align: top;
      margin-right: 5px;
    }
    li {
      .btns {
        text-align: right;
        margin: 40px 0 -20px 0;
        border-top: 1px solid rgba(0,0,0,0.09);
        padding-top: 10px;
        button:first-child {
          margin-right: 8px;
        }
      }
    }
  }
}
