@charset "utf-8";
@import "./../../../assets/scss/mixin";
.item{
    .item-title{
        margin: 0;
        font-size: 16px;
        line-height: 22px;
        font-weight: 500;
        color: rgba(0,0,0,.85);
        font-weight: 600;
        border-bottom: 1px solid #dedede;
    }
    .item-form{
        width: 90%;
        margin: 20px auto;
        ul{
            font-size: 0;
            li{
                margin:2% 0;
                .item-label,
                .item-inp,
                .item-tip{
                    display: inline-block;
                    vertical-align: top;
                    font-size: 12px;
                }
                .item-tip{
                    width: 100%;
                    color: #f92650;
                    text-align: center;
                }
                .item-label{
                    width: 28%;
                    text-align: right;
                    margin-right: 2%;
                    @include compatibility(box-sizing,border-box)
                }
                .item-inp{
                    width: 70%;
                    text-align: left;
                    position: relative;
                    .text{
                        display: block;
                        width: 100%;
                        border: 1px solid #dedede;
                        text-indent: 5px;
                        outline: none;
                        font-size: 12px;
                        @include border;
                        &.textarea{
                            height: 120px;
                            resize: none;
                        }
                    }
                    .count{
                        position: absolute;
                        right: 10px;
                        top: 100px;
                        span{
                            color: #ff6000;
                        }
                    }
                }
             
            }
        }
        .item-select{
            font-size: 12px;
        }
    }
}
.btns {
    margin: 24px -31px 1px -31px;
    text-align: right;
    border-top: 1px solid #dedede;
    padding-top: 10px;
    button{
      margin-right: 24px;
    }
    button:first-child {
      margin-right: 8px;
    }
  }
