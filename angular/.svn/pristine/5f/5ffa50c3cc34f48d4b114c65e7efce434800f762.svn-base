<div class="settle-detail">
    <div class="detail-record">
            <nz-table #nzTable [nzData]="records" [nzBordered]="true" [nzFrontPagination]="false"[nzShowPagination]="false"
           
            nzSize="middle" 
  >
      <thead nz-thead>
      <tr>
          <th nz-th nzWidth="80px"><span>申请时间</span></th>
          <th nz-th nzWidth="120px"><span>申请金额</span></th>
          <th nz-th><span>状态</span></th>
     
      </tr>
      </thead>
      <tbody nz-tbody>
      <tr nz-tbody-tr *ngFor="let record of nzTable.data">
          <td nz-td >
                {{record.submitTime?(record.submitTime | date:'y-MM-dd'):'--'}}
          </td>
          <td nz-td >
                {{(record.price?record.price:0)|number:'1.2'}}
          </td>
          <td nz-td >
                {{getWageState(record.state)}}
          </td>
      
      </tr>
      </tbody>
  </nz-table>
