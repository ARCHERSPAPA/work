import { Injectable } from '@angular/core';
import {RequestService} from "../../../../service/request.service";
import {Messages} from "../../../../model/msg";

@Injectable({
  providedIn: 'root'
})
export class TempBasicEditService {

  constructor(private req:RequestService) { }
    /**
     * 修改基装详情title
     * @param params
     * @returns {Promise<any>}
     */
    modifyTitle(params:any):Promise<any>{
        return new Promise((resolve,reject) =>{
            this.req.doPost({
                url:"addVersion",
                data: params,
                success:(res =>{
                    if(res && res.code == 200){
                        resolve([res.data,res.msg]);
                    }else{
                        reject(res.msg || Messages.FAIL.DATA);
                    }
                })
            })
        })
    }
    /**
     * 获取分类列表
     * 
     */
    getCategory():Promise<any>{
        return new Promise((resolve,reject) =>{
            this.req.doPost({
                url:"versionSuiteCategory",
                success:(res =>{
                    if(res && res.code == 200){
                        resolve(res.data);
                    }else{
                        reject(res.msg || Messages.FAIL.DATA);
                    }
                })
            })
        })
    }

    /**
     * 基装详情表格列表
     * @param params
     * @returns {Promise<any>}
     */
    getVersionMouldInfoList(params:any):Promise<any>{
        return new Promise((resolve,reject) =>{
            this.req.doPost({
                url:'versionMouldInfoList',
                data: params,
                success:(res =>{
                    if(res && res.code == 200){
                        resolve(res.data);
                    }else{
                        reject(res.msg || Messages.FAIL.DATA);
                    }
                })
            })
        })
    }

    /**
     * 批量添加 删除
     * @param url params
     * @returns {Promise<any>}
     */
    opreateMaterial(url:string,params:any):Promise<any>{
        return new Promise((resolve,reject) =>{
            this.req.doPost({
                url:url,
                data: params,
                success:(res =>{
                    if(res && res.code == 200){
                        resolve(res.msg);
                    }else{
                        reject(res.msg || Messages.FAIL.DATA);
                    }
                })
            })
        })
    }

}
