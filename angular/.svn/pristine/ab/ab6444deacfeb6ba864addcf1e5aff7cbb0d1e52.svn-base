.stats-attendance {
    &-info {
        margin: 24px 0;
        display: flex;
        height: 500px;
    }
    &-date {
        width: 50%;
    }
    &-table {
        width: calc(50% - 48px);
        margin-left: 48px;
        .datas {
            p {
                font-size: 16px;
                line-height: 22px;
                color: rgba(0, 0, 0, 0.85);
                span {
                    font-size: 14px;
                    line-height: 22px;
                    color: rgba(0, 0, 0, 0.45);
                    margin-left: 8px;
                }
            }
            ul {
                display: flex;
                margin-top: 16px;
                li {
                    width: 105px;
                    p {
                        font-size: 14px;
                        font-weight: 400;
                        line-height: 22px;
                        color: rgba(0, 0, 0, 0.45);
                    }
                    p:first-child {
                        font-size: 20px;
                        font-weight: 500;
                        line-height: 28px;
                        color: rgba(0, 0, 0, 0.85);
                    }
                }
            }
        }
    }
    &-head {
        width: calc(100% + 48px);
        margin: -24px -24px 0 -24px;
        height: 192px;
        background: #1890ff;
        border-radius: 4px 4px 0px 0px;
        display: flex;
        span {
            img {
                width: 120px;
                border-radius: 50%;
                margin: 48px 24px 24px 24px;
            }
        }
        ul {
            margin-top: 72px;
            font-size: 14px;
            color: white;
            li:first-child {
                font-size: 24px;
                line-height: 24px;
                margin-bottom: 20px;
            }
        }
    }
}
