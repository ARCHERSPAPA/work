@import "./../../../../../assets/scss/mixin";
.btns{
    text-align: right;
    margin-top: 24px;
    button:first-child{
        margin-right: 8px;
    }
}
tr th,tr td{
    font-size: 14px;
    max-width:100px;
    vertical-align: middle;
    a{
        padding-right: 4px;
    }
    @include ellipsis();
   }
   .modify {
    .textarea {
        position: relative;
        .count {
            position: absolute;
            right: 0;
            bottom: -20px;
            > span {
                color: #f92650;
            }
        }
    }
}