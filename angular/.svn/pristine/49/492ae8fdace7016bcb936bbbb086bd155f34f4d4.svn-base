@charset "utf-8";
@import "./../../../../../assets/scss/mixin";
.master-sale-add{
    .sale-title{
        display: flex;
        justify-content: space-between;
        align-items: center;
        div{
            font-size:20px;
            font-weight:500;
            color:rgba(0,0,0,0.85);
            @include compatibility(word-break, break-word);
        }
        a{
            font-size:14px;
            line-height: 20px;
            color:rgba(24,144,255,1);
        }
    }
    .clearance{
        height:8px;
        background:rgba(240,242,245,1);
        margin: 24px -24px;
    }
    .sale-add-search{
        display: flex;
        justify-content: space-between;
        .search-bar{
           .info{
                width: 240px;
                margin-right: 8px;
                display: inline-block;
                position: relative;
                top: -5px;
           }
        }
        .sale-brand{
            ::ng-deep ul{
                display: flex;
                height: 0;
                // overflow: auto;
                li{
                    // min-width: 50%;
                }
            }
        }
    }
    .table-head{
        width: 100%;
        height: 32px;
        .operate{
            float: left;
            span{
                font-size:14px;
                color:rgba(0,0,0,0.65);
                margin-left: 8px;
            }
        }
        .upload{
            float: right;
            button{
                &:first-child{
                    margin-right: 8px;
                }
            }
        }
    }
    .shelf{
        position: fixed;
        bottom: 0;
        right: 0;
        z-index: 999;
        width: calc(100% - 200px);
        height:64px;
        background:rgba(255,255,255,1);
        box-shadow:0px -2px 8px rgba(0,0,0,0.15);
        padding-top: 16px;
        button{
            float: right;
            margin-right: 24px;
        }
    }
    tr td {
        position: relative;
        max-width: 100px;
        vertical-align: middle;
		@include compatibility(word-break, break-word);
		@include ellipsis();
	}
}
.btns {
    margin: 24px -24px -11px -24px;
    text-align: right;
    border-top: 1px solid #dedede;
    padding-top: 10px;
    button{
        margin-right: 24px;
    }
    button:first-child {
        margin-right: 8px;
    }
}