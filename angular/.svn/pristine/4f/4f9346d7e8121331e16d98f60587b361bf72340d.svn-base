@charset "utf-8";
@import "../../../../assets/scss/mixin";
.cost-detail{
  .cost-title{
    font-size:16px;
    font-family:'PingFang SC';
    font-weight:500;
    line-height:24px;
    color:rgba(0,0,0,0.85);
  }
  .cost-fix{
    font-size:14px;
    font-family:'PingFang SC';
    font-weight:400;
    line-height:22px;
    color:rgba(24,144,255,1);
    text-align: right;
  }
  .cost-chart-data{
    position: relative;
    dl{
      width: 120px;
      height: 50px;
      position: absolute;
      left: 50%;
      top: 50%;
      margin-left: -24px;
      margin-top: -65px;
      z-index: 9;
    }
    dt,dd{
      font-family:'PingFang SC';
      text-align:center;
      font-weight:400;
    }
    dt{
      font-size:20px;
      line-height:28px;
      color:rgba(0,0,0,0.85);
      @include ellipsis;
    }
    dd{
      font-size:14px;
      line-height:22px;
      color:rgba(0,0,0,0.45);
    }
  }
  .cost-side{
    margin: 30px 0px;
    > dt{
      font-size:20px;
      font-family:'PingFang SC';
      font-weight:400;
      line-height:28px;
      color:rgba(0,0,0,0.85);
      position: relative;
      @include ellipsis;
      > span{
        display: block;
        position: absolute;
        left: 0;
        top: 10px;
        width: 8px;
        height: 8px;
        border-radius: 8px;
        &.bg-cost{
          background: #69C0FF;
        }
        &.bg-profit{
          background: #1890FF;
        }
      }
    }
    > dd{
      font-size:14px;
      font-family:'PingFang SC';
      font-weight:400;
      line-height:22px;
      color:rgba(0,0,0,0.45);
    }
  }
  .cost-publish{
    dl{
      font-family:'PingFang SC';
      font-weight:400;
      line-height:22px;
      margin:24px 0 0px 0;
      padding-bottom: 24px;
      border-bottom: 1px solid #E8E8E8;
      overflow: hidden;
      dt,dd{
        padding: 0;
        margin: 0;
      }
      .cost-name{
        font-size:14px;
        font-family:'PingFang SC';
        color:rgba(0,0,0,0.85);
      }
      .cost-gray{
        font-size:14px;
        color:rgba(0,0,0,0.45);
      }
      .cost-time{
        float: right;
      }
      .cost-content{
        font-size:14px;
        word-break: break-all;
        margin-top: 8px;
        color:rgba(0,0,0,0.65);
      }
      .cost-fix{
        font-size:14px;
        color:rgba(24,144,255,1);
      }
      .cost-img{
        > div{
          width: 96px;
          height: 96px;
          margin: 8px 16px 0 0;
          @include compatibility(display,inline-block);
          font-size: 0;
        }
      }
    }
  }
}

.cost-detail-warp{
  tr td,
  tr th{
    max-width: 100px;
    @include ellipsis;
  }
  tr td:last-child,
  tr th:last-child{
    max-width: 160px;
    @include ellipsis;
  }
}