@charset "utf-8";
@import "../../../../../assets/scss/mixin";
.supplier-materialAdd {
    display: inline-block;
    width: 630px;
    margin-top: 48px;
    input {
        width: 456px;
    }
    .layout {
        margin-top: 16px;
    }
    .uploaders {
        margin-right: 24px;
    }
    .btns {
        text-align: right;
        margin-top: 32px;
    }
    ul {
        li {
            display: inline-block;

            p {
                display: inline-block;
                width: 96px;
                height: 96px;
                margin-right: 24px;
                position: relative;
                .showDel {
                    position: absolute;
                    display: inline-block;
                    opacity: 0;
                    width: 96px;
                    height: 40px;
                    background: rgba(0, 0, 0, 0.45);
                    border-radius: 0px 0px 4px 4px;
                    top: 56px;
                    left: 0;
                    transition: 0.2s;
                    z-index: 1;
                }
                .del {
                    position: absolute;
                    top: 64px;
                    opacity: 0;
                    left: 46px;
                    transform: translate(-50%);
                    color: #dedede;
                    display: inline-block;
                    width: 20px;
                    height: 20px;
                    cursor: pointer;
                    background: url("../../../../../assets/images/del.png") no-repeat;
                    @include compatibility(background-size, 100% 100%);
                    @include compatibility(transition, all 0.5s);
                    z-index: 2;
                }
                &:hover {
                    .del,
                    .showDel {
                        opacity: 1;
                    }
                }
            }
        }
    }
}
