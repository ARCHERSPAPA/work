@charset "utf-8";
.image-large-wrapper{
    width: 100%;
    height:700px;
    overflow: hidden;
    position: relative;
    .image-large{
        position: absolute;
        cursor: move;
        width: 100%;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        img{
            max-width: 700px;
            max-height: 700px;
            display: block;
            margin: auto;
        }
    }
    .image-arrow{
        width: 100px;
        height: 100px;
        position: absolute;
        top: 50%;
        margin-top: -50px;
        display: none;
        font-size: 50px;
        color:#096dd9;
        text-align: center;
        line-height: 100px;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        &.arrow-left{
            left: 0;
        }
        &.arrow-right{
            right: 0;
        }
        &.arrow-disabled{
            cursor: not-allowed;
            color: #9d9d9d;
        }
    }
    &:hover{
        .image-arrow{
            display: block;
        }
    }
}

