@charset "utf-8";
@import "./../../../../../assets/scss/mixin";

.settle-material-wage{
    .content-head{
        display: flex;
        justify-content: space-between;
        .search{
            display: flex;
            justify-content: space-between;
            .info{
                width: 268px;
                margin-right: 8px;
                input{
                    width: 168px;
                }
            }
        }
    }
    .select{
        span{
            font-size:14px;
            color:rgba(0,0,0,0.65);
            margin-left: 8px;
        }
    }
    tr td {
        max-width: 100px;
        @include compatibility(word-break, break-word);
        @include ellipsis();
    }
}
.btns {
    margin: 24px -24px -11px -24px;
    text-align: right;
    border-top: 1px solid #dedede;
    padding-top: 10px;
    button{
        margin-right: 24px;
    }
    button:first-child {
        margin-right: 8px;
    }
}
.modify {
    .textarea {
        position: relative;
        .count {
            position: absolute;
            right: 0;
            bottom: -20px;
            > span {
                color: #f92650;
            }
        }
    }
}
