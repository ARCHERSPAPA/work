@charset "utf-8";
@import "./../../../../../assets/scss/mixin";
.tab{
    font-size: 0;
    .tab-item{
        display: inline-block;
        vertical-align: top;
        font-size: 13px;
        padding: 5px 40px;
        border-left:1px solid #dedede;
        border-top: 1px solid #dedede;
        border-bottom: 1px solid #dedede;
        color: #353535;
        text-decoration: none;
        letter-spacing: 3px;
        &.active{
            background: #efefef;
        }
        &:last-child{
            border-right: 1px solid #dedede;
        }
    }
}

.modify{
    ul{
        li{
            width: 100%;
            font-size: 0;
            .label,.inp{
                display: inline-block;
                vertical-align: top;
                font-size: 14px;
                line-height: 26px;
            }
            .label{
                width: 30%;
                text-align: right;
            }
            .inp{
                width: 58%;
                margin-left: 2%;
                position: relative;
                .inp-over{
                    width: 100%;
                    height: 30px;
                    position: absolute;
                    left: 0;
                    top: 0;
                    background: transparent;
                    z-index: 10;
                }
                .text{
                    display: block;
                    width: 100%;
                    border: 1px solid #dedede;
                    text-indent: 10px;
                    outline: none;
                    font-size: 14px;
                    margin-bottom: 10px;
                    @include border;
                    &.textarea{
                        height: 120px;
                        resize: none;
                    }
                }
            }
        }
    }
}
