@charset "utf-8";
@import "../../../assets/scss/mixin";

.upload-img-cnt {
    width: 100%;
    height: 100%;
    font-size: 12px;
    overflow: hidden;
    .upload-files {
        border: 1px solid #dedede;
        height: 260px;
        margin: 20px 0;
        overflow: auto;
        > li {
            width: 100%;
            height: 26px;
            line-height: 26px;
            border-bottom: 1px solid #dedede;
            &.title{
                padding:5px;
                text-align:center;
                font-size: 14px;
            }
            &:last-child {
                border-bottom: 0
            }
            span {
                display: inline-block;
                font-size: 12px;
                text-align: center;
                @include ellipsis;
                &.head {
                    font-weight: bold;
                }
                &.w40 {
                    width: 40%;
                }
                &.w30{
                    width: 30%;
                }
                &.w20 {
                    width: 20%;
                }
                &.w10{
                    width: 10%;
                }
                &.progress{
                    width: 100%;
                    height: 5px;
                    background: #d4d4d4;
                    position: relative;
                    .run{
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 0;
                        height: 100%;
                        background: #0aac02;
                    }
                }
                &.num{
                    position: absolute;
                    right: 0;
                    font-size: 13px;
                    color: rgba(0,0,0,0.6);
                }
            }
            .delete{
                font-size: 14px;
                color:#f92650;
            }
        }
    }
}
.upload-img-btn {
    display: inline-block;
    width: 80px;
    height: 35px;
    line-height: 30px;
    text-align: center;
    position: relative;
    overflow: hidden;
    input[type=file] {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        z-index: 10;
    }
    button[type=button] {
        width: 100%;
    }
}
