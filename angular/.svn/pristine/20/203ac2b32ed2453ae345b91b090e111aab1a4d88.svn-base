@import "./../../../../assets/scss/mixin";

/***部门树状结构布局***/
.choice {
  .chn-btn {
    display: inline-block;
    width: 16px;
    height: 16px;
    cursor: pointer;
    background-image: url("./../../../../assets/images/standard.png");
    &.chn-plus {
      background-position: -76px 24px;
    }
    &.chn-minus {
      background-position: -94px 24px;
    }
    &.chn-empty {
      background-position: -110px 66px;
    }
    &.chn-close {
      background-position: -111px 98px;
    }
    &.chn-open {
      background-position: -111px 81px;
    }
  }
}
.item {
  width: 100%;
  .item-dl {
    width: 100%;
    margin: 0;
    @include compatibility(display, flex);
    dd {
      margin: -1px 0 0 0;
      padding: 5px 0;
      @include compatibility(flex, 1);
      border: 1px solid #dedede;
      border-right: 0;
      font-size: 14px;
      &:first-child {
        @include compatibility(display, flex);
        overflow: hidden;
        .choice,
        .name {
          display: block;
          width: 20%;
          height: 100%;
          font-size: 0;
          float: left;
          text-align: right;
        }
        .name {
          width: 80%;
          font-size: 12px;
          text-align: left;
          @include ellipsis;
        }
        .choice {
          .chn-btn {
            display: inline-block;
            width: 16px;
            height: 16px;
            cursor: pointer;
            background-image: url("./../../../../assets/images/standard.png");
            &.chn-plus {
              background-position: -76px 24px;
            }
            &.chn-minus {
              background-position: -94px 24px;
            }
            &.chn-empty {
              background-position: -110px 66px;
            }
            &.chn-close {
              background-position: -111px 98px;
            }
            &.chn-open {
              background-position: -111px 81px;
            }
          }
        }
      }

      &.remark {
        @include ellipsis;
      }
      &.item-dd-btns {
        text-align: left;
        border-right: 1px solid #dedede;
        a {
          display: inline-block;
          font-size: 16px;
          margin: 0 5px;
          @include tag(#0a8ddf);
          &.del {
            @include tag(#f00);
          }
        }
      }
    }
  }
}

.meal_modal {
  .btns {
    margin: 200px -24px -11px -24px;
    text-align: right;
    border-top: 1px solid #dedede;
    padding-top: 10px;
    button{
      margin-right: 24px;
    }
    button:first-child {
      margin-right: 8px;
    }
  }
  .textarea {
    position: relative;
    .count {
      position: absolute;
      right: 5px;
      bottom: -20px;
      > span {
        color: #f92650;
      }
    }
  }
} 
.depart-list{
	tr th,tr td{
		white-space: nowrap;
		text-overflow: ellipsis;
		overflow: hidden;
		&:nth-of-type(1){
			width: 40%;
		}
		&:nth-of-type(2){
			width: 40%;
		}
		&:nth-of-type(3){
			width: 20%;
		}
		div{
      width: 630px;
			display: inline-block;
      @include ellipsis;
		}
		a{
			margin-left: 8px;
			color: #53afe9;
			&:nth-of-type(2){
			  color: #f00;
			}
		}
	}
}

