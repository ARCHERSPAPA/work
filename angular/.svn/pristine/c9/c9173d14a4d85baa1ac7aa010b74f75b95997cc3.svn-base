@charset "utf-8";
@import "./../../../assets/scss/mixin";

.rev {
    width: 100%;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei",
        "Helvetica Neue", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    .head {
        width: 100%;
        h1 {
            background: url("./logo.png") no-repeat left center transparent;
            width: 240px;
            height: 40px;
            background-size: contain;
            margin-top: 40px;
            /* height: 50px; */
            /* text-align: left; */
            /* margin: 0 auto; */
            margin-left: 238px;
        }
    }

    .content {
        height: 520px;
        width: 1200px;
        margin: 0 auto;
        margin-top: 60px;
        // background: url("./bg.png") no-repeat;
        // background-size: 100% 100%;
        // padding-top: 100px;
        position: relative;
        display: flex;
        box-shadow:0px 8px 32px rgba(0,0,0,0.16);
        border-radius: 4px;
        /**
            v1.3.4前版本form样式表
         */
         .bg-img{
             background: url("https://qiniu.madrock.com.cn/rev/imgs/8f3ed29b-5e25-a290-2d77-28e91dc027bb.png") no-repeat;
             background-size: 600px;
             width: 600px;
             height: 520px;
         }
        .form {
            width: 446px;
            height: 320px;
            position: absolute;
            right: 80px;
            top:  calc(31% + 69px);
            margin-top: -160px;
            background: white;
            /* border: 1px solid #dedede; */
            // border-radius: 3px;
            li {
                font-size: 0;
                height: 55px;
                // overflow: hidden;
                width: 400px;
                &.tip {
                    font-size: 12px;
                    height: 20px;
                    line-height: 20px;
                    margin-bottom: 0;
                }
                &.title {
                    display: inline-block;
                    vertical-align: top;
                    width: 100%;
                    font-size: 30px;
                    color:rgba(0,0,0,0.85);
                    height: 32px;
                    line-height: 32px;
                    font-weight: 700;
                    text-align: center;
                    margin: 10px auto;
                }
                &.forget {
                    height: 20px;
                    line-height: 20px;
                    .text {
                        display: block;
                        text-align: right;
                        color: #0a8ddf;
                        font-size: 12px;
                        cursor: pointer;
                    }
                }
                label {
                    display: inline-block;
                    vertical-align: top;
                    font-size: 14px;
                    height: 32px;
                    line-height: 38px;
                    outline: none;
                    text-indent: 5px;
                    &.label {
                        width: 70px;
                        text-align: right;
                        padding-right: 10px;
                    }
                }
                .inp {
                    display: inline-block;
                    width: 320px;
                    input {
                        width: 320px;
                        // display: inline-block;
                        // vertical-align: top;
                        // font-size: 14px;
                        // height: 32px;
                        // line-height: 32px;
                        // outline: none;
                        // text-indent: 5px;
                        &.text {
                            width: 100%;
                            border: 1px solid #dedede;
                            box-sizing: border-box;
                        }
                        &.code {
                            width: 120px;
                            letter-spacing: 5px;
                            cursor: pointer;
                            background: transparent;
                            font-size: 14px;
                            letter-spacing: 0;
                            cursor: text;
                        }
                    }
                    .code {
                        display: inline-block;
                        vertical-align: top;
                        width: 110px;
                        height: 32px;
                        line-height: 32px;
                        letter-spacing: 5px;
                        padding-left: 10px;
                        background: rgba(10, 120, 110, 0.15);
                        font-size: 14px;
                        cursor: pointer;
                    }
                }

                button {
                    width: 320px;
                    height: 40px;
                    line-height: 40px;
                    margin-top: 8px;
                    // background: rgba(0, 120, 12, 0.7);
                    // color: #fff;
                    // outline: none;
                    // border: 0;
                    // display: inline-block;
                    // cursor: pointer;
                    // font-size: 14px;
                    // &.disabled {
                    //     background: rgb(222, 222, 222);
                    //     color: #f2f2f2;
                    //     cursor: not-allowed;
                    // }
                }
            }
        }
    }
}
