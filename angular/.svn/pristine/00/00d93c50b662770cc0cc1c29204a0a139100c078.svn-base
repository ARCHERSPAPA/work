@charset "utf8";
@import "../../../../../assets/scss/mixin";
.master-head-info{
  overflow: hidden;
  .head-title,
  .head-status{
    float: left;
    display:inline-block;
  }
  .head-title{
    max-width: 90%;
    font-size:20px;
    font-weight:500;
    line-height:28px;
    color:rgba(0,0,0,0.85);
    @include  ellipsis;
  }
  .head-status{
    font-size:12px;
    font-weight:400;
    padding: 4px 8px;
    border-radius:4px;
  }
  .head-remark{
    max-width: 90%;
    font-size:14px;
    font-weight:400;
    line-height:22px;
    color:rgba(0,0,0,0.85);
    @include  ellipsis;
  }
  .head-btn{
    display: inline-block;
    float: right;
    font-size:14px;
    font-weight:400;
    line-height:22px;
    color:rgba(24,144,255,1);
    text-decoration: none;
  }
  .head-base{
    font-size:14px;
    font-weight:400;
    line-height:22px;
    color:rgba(0,0,0,0.85);
    div{
      @include  ellipsis;
    }
  }
  .head-company{
     @include ellipsis;
  }
}

.master-line{
  width:calc(100% + 72px);
  height: 8px;
  background:rgba(240,242,245,1);
  margin-left: -24px;
}

.master-shelf{
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 999;
  width: calc(100% - 200px);
  height:64px;
  background:rgba(255,255,255,1);
  box-shadow:0px -2px 8px rgba(0,0,0,0.15);
  padding-top: 16px;
  overflow: hidden;
  button{
    float: right;
    margin-right: 24px;
  }
}