@charset "utf-8";
.rev-quick{
    .quick-title{
        font-size: 14px;
        font-weight: 600;
        height: 30px;
        line-height: 30px;
        text-align: center;
        background: #f2f2f2;
        border: 1px solid #dedede;
    }
    .quick-content{
        width: 100%;
        height: 360px;
        margin-top: 1rem;
        background: #fff;
        border: 1px solid #dedede;
        overflow: auto;
    }
    .quick-list{
        width: 1000%;
        height: 1000%;
    }
}

/***单独部门数据加载样式***/
.quick-item{
    &.item-inline{
        padding: 0 0 0 18px;
        margin: 0;
    }
    li{
        .item-inline{
            background: url("./../../../assets/images/line.gif") 0 0 repeat-y;
        }
    }
    a{
        padding: 1px 3px 0 0;
        margin: 0;
        cursor: pointer;
        height: 17px;
        color: #333;
        background-color: transparent;
        text-decoration: none;
        vertical-align: top;
        display: inline-block;
    }
    span{
        display: inline-block;
        vertical-align: middle;
        margin-right: 2px;
        font-size: 12px;
        &.qk-selected{
            color: #0a8ddf;
        }
    }
    .qk-btn{
        width: 15px;
        height: 15px;
        border: 0 none;
        cursor: pointer;
        outline: none;
        background-image: url("./../../../assets/images/standard.png");
        background-color: transparent;
        background-attachment: scroll;
        &.qk-plus{
            background-position: -74px 0px;
        }
        &.qk-minus{
            background-position: -92px 0px;
        }
        &.qk-doc{
            background-position: -56px -18px;
        }
        &.qk-empty{
            background-position: -110px 64px;
        }
        &.qk-close{
            background-position: -111px 98px;
        }
        &.qk-open{
            background-position: -111px 81px;
        }
        &.qk-checkbox{
            background-position: 2px 2px;
            &.checked{
                background-position: 13px 99px;
            }
        }
    }
}
