@charset "utf-8";
.search-bar {
  display: flex;
  &-side {
    flex: 1;
    margin-left: 8px;
  }
  .select-simple {
    width: 100%;
  }
  .select-multiple {
    width: 100%;
    min-width: 120px;
    max-width: 240px;
    ::ng-deep .ant-select-selection--multiple {
      max-height: 32px;
      .ant-select-selection__rendered {
        max-height: 32px;
      }
    }
    ::ng-deep ul {
      white-space: nowrap;
      overflow: auto;
      li {
        display: inline-block;
        float: none
      }
    }
  }
}