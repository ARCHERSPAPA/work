<div nz-row nzType="flex" nzJustify="space-between" nzAlign="top"
     style="width:100%;height:680px;overflow-y:scroll;overflow-x:hidden;" #target>
    <div nz-col nzSpan="16">
        <div nz-col nzSpan="24" class="post-role">
            <h3 class="post-head">{{pname}}</h3>
            <span class="post-desc">职位名称</span>
        </div>
        <div nz-col nzSpan="24" class="post-role-tree">
            <rev-role-trees [trees]="roleList" [roots]="roleList"></rev-role-trees>
        </div>
    </div>
    <div nz-col nzSpan="8">
        <div nz-col nzSpan="24" class="post-role">
            <h4 class="post-sub">快速查询部门范围</h4>
            <h3 class="post-sub-title">部门配制</h3>
            <div class="post-options">
                <nz-radio-group [(ngModel)]="queryDepartType">
                    <label nz-radio [nzValue]="o.id" *ngFor="let o of options">{{ o.content }}</label>
                </nz-radio-group>
            </div>
            <h3  class="post-sub-title mt-16">数据配制</h3>
            <div class="post-options">
                <nz-radio-group [(ngModel)]="queryDepartData">
                    <label nz-radio [nzValue]="o.key" *ngFor="let o of dataSource">{{ o.value }}</label>
                </nz-radio-group>
            </div>
        </div>
    </div>
</div>
<!--<div nz-col nzSpan="24" style="padding-top: 20px;">-->
<nz-affix [nzOffsetBottom]="50">
    <div>
        <div nz-col nzSpan="2" nzOffset="18">
            <button nz-button [nzType]="'default'" nzBlock="true" (click)="exist($event)">
                <span>取消</span>
            </button>
        </div>
        <div nz-col nzSpan="2" nzOffset="1">
            <button nz-button [nzType]="'primary'" nzBlock="true" (click)="submit($event)">
                <span>保存</span>
            </button>
        </div>
    </div>
</nz-affix>
