/* 自定义-列表文字大小 */
.site-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 21.73rpx 0 23.55rpx;
}
.site-box-item-img {
    width: 144.92rpx;
    height: 144.92rpx;
    background: #ffe6e6;
    border-radius: 14.49rpx;
}
.site-box-item.item-border {
    width: calc(100% - 144.92rpx);
    border-bottom: 1.81rpx solid rgba(0, 0, 0, 0.05);
}
.site-box-item-col {
    width: 100%;
    margin-left: 14.49rpx;
    overflow: hidden;
}
.site-box-item-name {
    display: inline-block;
    max-width: 40%;
    height: 39.85rpx;
    font-size: 28.98rpx;
    font-weight: bold;
    line-height: 39.85rpx;
    color: rgba(0, 0, 0, 0.9);
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.site-box-item-stage {
    margin-left: 14.49rpx;
    display: inline-block;
    padding: 3.62rpx 7.24rpx;
    font-size: 21.73rpx;
    font-weight: 400;
    text-align: center;
    color: white;
    background: #ffd117;
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.site-box-item-price {
    display: inline-block;
    float: right;
    line-height: 39.85rpx;
    padding-right: 18.11rpx;
    padding-left: 18.11rpx;
    font-size: 28.98rpx;
    font-weight: 400;
    color: #ff8800;
}
.site-box-item-price:before {
      content: "\A5";
}
.site-box-item-price:after {
      content: "\4E07";
}
.site-box-item-info {
    font-size: 25.36rpx;
    font-weight: 400;
    line-height: 39.85rpx;
    color: rgba(0, 0, 0, 0.4);
}
.site-box-item-addr {
    display: inline-block;
    width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.site-box-item-dist {
    display: inline-block;
    width: 20%;
    float: right;
}
.site-box-item-dist:after {
      content: "km";
}

