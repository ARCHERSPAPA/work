<view class="mkb-user"><view class="mkb-user-login"><block wx:if="{{loginStatus===0}}"><image class="mkb-user-login-img" src="{{loginUser.avatar}}" lazy-load="true"></image></block><block wx:else><image class="mkb-user-login-img" src="{{avatarUrl}}" lazy-load="true" data-event-opts="{{[['tap',[['$openPage',['info']]]]]}}" bindtap="__e"></image></block><block wx:if="{{loginStatus===0}}"><button class="mkb-user-login-text" open-type="getUserInfo" data-event-opts="{{[['getuserinfo',[['getUserInfo',['$event']]]]]}}" bindgetuserinfo="__e">点击注册/登录</button></block><block wx:else><text data-event-opts="{{[['tap',[['$openPage',['info']]]]]}}" class="mkb-user-login-text" bindtap="__e">{{nickName}}</text></block></view><view class="mkb-user-items"><block wx:for="{{loginUser.items}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view><mkb-user-item vue-id="{{'1-'+index}}" item="{{item}}" data-event-opts="{{[['^goTo',[['goUrl']]]]}}" bind:goTo="__e" bind:__l="__l"></mkb-user-item></view></block></view><block wx:if="{{loginStatus===1}}"><view class="mkb-user-btn"><button type="button" data-event-opts="{{[['tap',[['logout',['$event']]]]]}}" bindtap="__e">点击退出</button></view></block></view>