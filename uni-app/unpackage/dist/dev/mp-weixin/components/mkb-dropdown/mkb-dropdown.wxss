.dropdown {
  width: 100%;
  height: 100%;
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}
.dropdown.show {
    -webkit-animation-name: fadeInDown;
    animation-name: fadeInDown;
}
.dropdown-content {
    width: 100%;
    background: white;
}
.dropdown-item {
    font-size: 28.98rpx;
    line-height: 79.71rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.7);
    text-indent: 28.98rpx;
}
.dropdown-item.actived {
      font-weight: bold;
      color: rgba(0, 0, 0, 0.9);
}
.dropdown-mask {
    width: 100%;
    height: 100%;
    -webkit-transition: all .3s;
    transition: all .3s;
    z-index: 2;
}
.dropdown-mask.show {
      background: rgba(0, 0, 0, 0.5);
}

