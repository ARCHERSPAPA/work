.filter-content-detail-item-default {
      height: 57.97rpx;
      background: rgba(0, 0, 0, 0.05);
      border-radius: 36.23rpx;
      font-size: 25.36rpx;
      text-align: center;
      box-sizing: border-box;
      padding: 10.86rpx 14.49rpx;
      margin-right: 14.49rpx;
      margin-bottom: 14.49rpx;
      display: inline-block;
