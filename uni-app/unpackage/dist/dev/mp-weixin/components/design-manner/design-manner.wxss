/* 自定义-列表文字大小 */
page {
  padding-bottom: 94.2rpx;
}
.design-manner {
  font-weight: 400;
}
.design-manner-title {
    font-size: 28.98rpx;
    color: rgba(0, 0, 0, 0.4);
    margin-bottom: 21.73rpx;
}
.design-manner-list {
    width: 100%;
    height: calc((100vw - 36.23rpx) * 0.618);
    background: #FFFFFF;
    border: 7.24rpx solid #FFFFFF;
    border-radius: 14.49rpx;
    padding: 3.62rpx;
    box-sizing: border-box;
    margin-bottom: 28.98rpx;
    position: relative;
}
.design-manner-list .backImg {
      width: 100%;
      height: calc((100vw - 57.97rpx) * 0.618);
      border-radius: 14.49rpx;
}
.design-manner-list .backImg view {
        width: 100%;
        height: calc((100vw - 57.97rpx) * 0.618);
        border-radius: 14.49rpx;
}
.design-manner-list-desc {
      width: calc(100% - 3.62rpx);
      height: 72.46rpx;
      line-height: 72.46rpx;
      border-radius: 0px 0px 14.49rpx 14.49rpx;
      background: -webkit-linear-gradient(top, transparent 0%, rgba(0, 0, 0, 0.4) 100%);
      background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.4) 100%);
      position: absolute;
      bottom: 0;
      text-align: center;
      font-size: 28.98rpx;
      color: white;
}
.design-manner-list-gou {
      position: absolute;
      top: 21.73rpx;
      right: 21.73rpx;
      width: 43.47rpx;
      height: 43.47rpx;
      border-radius: 43.47rpx;
}
.design-manner-list-gou image {
        width: 100%;
        height: 100%;
}

