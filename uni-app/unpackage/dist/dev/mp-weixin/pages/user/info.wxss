/* 自定义-列表文字大小 */
.user-info {
  padding: 18.11rpx 0 0 38.04rpx;
}
.user-info-item {
    padding-right: 36.23rpx;
    border-bottom: 1.81rpx solid #dedede;
    overflow: hidden;
}
.user-info-item-name {
      font-size: 34.42rpx;
      font-weight: 500;
      color: black;
      display: inline-block;
      margin: 38.04rpx 0 39.85rpx 0;
}
.user-info-item-box {
      width: calc(100% - 181.15rpx);
      text-align: right;
      float: right;
}
.user-info-item-box .box-img {
        width: 126.81rpx;
        height: 126.81rpx;
        padding: 18.11rpx 0;
}
.user-info-item-box .box-text {
        font-size: 34.42rpx;
        color: #9fa2a8;
        font-weight: 500;
        padding: 38.04rpx 0;
        display: inline-block;
}
.user-info-item-box .box-icon {
        padding: 38.04rpx 0 39.85rpx 0;
}
.user-info-item-box .box-icon-button {
          padding: 0;
          text-align: right;
          margin: 0;
          outline: none;
          background: transparent;
          line-height: 1;
}
.user-info-item-box .box-icon-button:after {
            border: 0;
}

