.price-manner {
  font-weight: 400;
}
.price-manner-title {
  font-size: 28.98rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-bottom: 28.98rpx;
}
.price-manner-all {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.price-manner-all .active {
  background: #098684;
  border: 7.24rpx solid #098684;
}
.price-manner-all-item:nth-of-type(2n) {
  margin-left: 28.98rpx;
}
.price-manner-all-item-select {
  width: calc((100vw - 86.95rpx) / 2);
  height: calc((100vw - 86.95rpx) / 2);
  border: 7.24rpx solid #ffffff;
  box-sizing: border-box;
  border-radius: 14.49rpx;
  margin-bottom: 28.98rpx;
}
.price-manner-all-item-select-img {
  width: 100%;
  height: 100%;
  border-radius: 14.49rpx;
  position: relative;
}
.price-manner-all-item-select-img .backImg {
  width: 100%;
  height: 100%;
  border-radius: 14.49rpx;
}
.price-manner-all-item-select-img .backImg view {
  border-radius: 14.49rpx;
}
.price-manner-all-item-select-img-desc {
  width: 100%;
  height: 72.46rpx;
  line-height: 72.46rpx;
  background: -webkit-linear-gradient(top, transparent 0%, rgba(0, 0, 0, 0.4) 100%);
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.4) 100%);
  border-radius: 0px 0px 14.49rpx 14.49rpx;
  text-align: center;
  font-size: 28.98rpx;
  font-weight: bold;
  color: white;
  position: absolute;
  bottom: 0;
}
.price-manner-all-item-select-img-gou {
  position: absolute;
  top: 14.49rpx;
  right: 14.49rpx;
  width: 43.47rpx;
  height: 43.47rpx;
  border-radius: 43.47rpx;
}
.price-manner-all-item-select-img-gou image {
  width: 100%;
  height: 100%;
}

