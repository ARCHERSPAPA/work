<view class="order-captcha"><view class="order-captcha-mobile"><text class="order-captcha-text">手机号码</text><view>{{mobile?$root.m0:''}}</view></view><view class="order-captcha-code"><text class="order-captcha-text">{{codeShow?'短信验证码':''}}</text><view class="order-captcha-box"><view class="code-input"><input type="number" placeholder="短信验证码" maxlength="8" data-event-opts="{{[['focus',[['focusCode',['$event']]]],['blur',[['blurCode',['$event']]]],['input',[['__set_model',['','captcheCode','$event',[]]]]]]}}" value="{{captcheCode}}" bindfocus="__e" bindblur="__e" bindinput="__e"/></view><view class="code-send"><block wx:if="{{!isSend}}"><button data-event-opts="{{[['tap',[['send']]]]}}" catchtap="__e">发送</button></block><block wx:else><button class="disabled">{{(seconds>=10?seconds:'0'+seconds)+"s"}}</button></block></view></view></view><view class="order-captcha-submit"><button data-event-opts="{{[['tap',[['submit']]]]}}" class="{{[(!captcheCode)?'disabled':'']}}" catchtap="__e">提交</button></view></view>