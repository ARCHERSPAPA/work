  padding: 43.47rpx 28.98rpx;
}
.order-captcha-mobile, .order-captcha-code {
  width: 100%;
  padding: 18.11rpx 0;
  border-bottom: 1.81rpx solid rgba(0, 0, 0, 0.06);
}
.order-captcha-mobile view {
  margin-top: 7.24rpx;
  font-size: 43.47rpx;
  font-weight: 500;
  line-height: 59.78rpx;
  color: rgba(0, 0, 0, 0.9);
}
.order-captcha-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.order-captcha-box .code-input {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
