.order-captcha-box .code-input input {
  width: 80%;
  height: 61.59rpx;
  line-height: 61.59rpx;
  margin: 9.05rpx 0;
  font-size: 43.47rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.9);
}
.order-captcha-box .code, .order-captcha-box .code-send {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: right;
}
.order-captcha-box .code button, .order-captcha-box .code-send button {
  width: 150.36rpx;
  line-height: 79.71rpx;
  border: 1.81rpx solid #098684;
  border-radius: 39.85rpx;
  background: transparent;
  color: #098684;
}
